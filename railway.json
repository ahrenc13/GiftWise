{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn giftwise_app:app --bind 0.0.0.0:$PORT --workers 1 --timeout 600 --graceful-timeout 120 --worker-class sync --log-level info",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
